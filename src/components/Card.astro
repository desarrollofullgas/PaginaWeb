---
interface Props {
	title: string;
}

const { title} = Astro.props;
---
<div class="px-3 sm:px-2 pt-2 md:pt-0 flex flex-col items-center gap-2">
    <div class="bg-red-50 rounded-full w-fit p-3 flex items-center justify-center">
        <slot name="icon"/>
    </div>
    <h2 class="font-medium text-3xl text-center">{title}</h2>
    <div class="text-balance text-lg mt-2 text-center">
        <slot name="content"/>
    </div>
</div>

