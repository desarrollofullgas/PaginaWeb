---
interface Props {
    fondo:string,
    textColor:string
};
const {fondo,textColor}=Astro.props;
---
<section class="parallax w-full bg-no-repeat bg-cover bg-fixed" style={'background-image:url('+fondo+')'}>
    <slot/>
</section>
<style define:vars={{textColor}}>
.parallax{
    background-position: center top;
    color: var(--textColor);
}
</style>