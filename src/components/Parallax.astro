---
interface Props {
    fondo:string,
};
const {fondo}=Astro.props;
---
<section class="parallax bg-no-repeat bg-cover bg-fixed" style={'background-image:url('+fondo+')'}>
    <div class="w-full bg-slate-950 bg-opacity-55 p-2">
        <slot/>
    </div>
</section>
<style>
.parallax{
    background-position: center top;
}
</style>