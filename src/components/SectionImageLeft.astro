---
interface Props {
    tittle: string;
}
const {tittle}=Astro.props;
---
<section class="AnimateOpacityScale max-w-7xl m-auto py-3 grid grid-cols-1 sm:grid-cols-2 gap-4 items-center text-slate-300">
    <slot name="image"/>
    <div class="text-balance p-3">
        <h2 class="mb-2 text-4xl font-semibold">{tittle}</h2>
        <slot name="description"/>
        <slot name="list"/>
    </div>
</section>