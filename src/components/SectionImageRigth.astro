---
interface Props {
    tittle: string;
}
const {tittle}=Astro.props;
---
<section class="AnimateOpacityScale max-w-7xl m-auto py-3 grid grid-cols-1 grid-rows-2 sm:grid-cols-2 sm:grid-rows-1 sm:gap-4 items-center text-slate-300 mb-5">
    <div class="text-balance px-3 py-0 sm:py-3 row-start-2 sm:row-start-1">
        <h2 class="mb-2 text-4xl font-semibold">{tittle}</h2>
        <slot name="description"/>
        <slot name="list"/>
    </div>
    <slot name="image"/>
</section>