---
import Close from "../icons/Close.astro";
import Aleft from "../icons/arrow_left.astro";
import Aright from "../icons/arrow_right.astro";
import Gallery from "../components/Gallery.astro";
import OfertaServicios from "../components/OfertaServicios.astro";
import HeroAlt from "../components/HeroAlt.astro";
import Parallax from "../components/Parallax.astro";
import Layout from "../layouts/Layout.astro";
import { images } from "../constants/images";
const famfullgas = images.filter((image) => image.category === "fam");
const columnright = famfullgas.filter((image) => image.column == "right");
const columnmiddle = famfullgas.filter((image) => image.column == "middle");
const columnmiddle2 = famfullgas.filter((image) => image.column == "middle2");
const columnleft = famfullgas.filter((image) => image.column == "left");
---

<Layout title="El Buen Trato">
    <Parallax fondo="/src/img/buentrato.jpg">
        <h1 class="text-slate-200 text-center font-semibold my-32">
            <p class="mb-7 text-2xl">
                Programa de generación de bienestar el cual busca mejorar y
                transformar la calidad de vida de las personas que interactúan
                con la familia FullGas.
            </p>
            <p class="mt-7 font-bold text-5xl">¡Es nuestra gran diferencia!</p>
        </h1>
    </Parallax>
    
    <OfertaServicios />

    <Gallery title="FULLGAS CONTIGO..." subTitle="">
        <style>
            .carousel {
                display: none;
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background-color: transparent;
                padding: 1rem;
                z-index: 9999;
                width: 80%;
                max-width: 800px;
                text-align: center;
                display: flex;
                flex-direction: column;
                align-items: center;
            }
            .carousel img {
                max-width: 100%;
                max-height: 500px;
                object-fit: contain;
                border-radius: 0.5rem;
                display: block;
                margin: 0 auto;
            }
            /* Estilos para el fondo desenfocado */
            .overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(
                    0,
                    0,
                    0,
                    0.5
                ); /* Fondo semitransparente */
                backdrop-filter: blur(5px); /* Filtro de desenfoque */
                z-index: 9998; /* Por debajo del carrusel */
            }
        </style>
        <div class="grid gap-4">
            {
                columnright.map((image) => (
                    <div>
                        <img
                            class={image.clase}
                            src={image.cover}
                            alt={image.attribute}
                            loading="lazy"
                        />
                    </div>
                ))
            }
        </div>
        <div class="grid gap-4">
            {
                columnmiddle.map((image) => (
                    <div>
                        <img
                            class={image.clase}
                            src={image.cover}
                            alt={image.attribute}
                            loading="lazy"
                        />
                    </div>
                ))
            }
        </div>
        <div class="grid gap-4">
            {
                columnmiddle2.map((image) => (
                    <div>
                        <img
                            class={image.clase}
                            src={image.cover}
                            alt={image.attribute}
                            loading="lazy"
                        />
                    </div>
                ))
            }
        </div>
        <div class="grid gap-4">
            {
                columnleft.map((image) => (
                    <div>
                        <img
                            class={image.clase}
                            src={image.cover}
                            alt={image.attribute}
                            loading="lazy"
                        />
                    </div>
                ))
            }
        </div>
        <div class="overlay" id="overlay"></div>
        <div id="carousel" class="carousel">
            <button
                id="closeButton"
                class="close-button absolute right-0 top-0 m-4 px-4 py-2 bg-gray-800 text-white rounded"
            >
                <Close clases="w-12 h-12 text-neutral-300" />
            </button>
            <img
                id="carousel-image"
                class="h-auto max-w-full rounded-lg"
                src=""
                alt=""
            />
            <p
                id="carousel-description"
                class="bg-gray-700/50 p-2 rounded-sm text-neutral-100 font-bold text-2xl uppercase"
            >
            </p>
            <button
                class="absolute top-1/2 left-2 transform -translate-y-1/2"
                id="prevButton"
            >
                <Aleft
                    clases="w-24 h-24 bg-none text-gray-300 rounded-full hover:text-red-500 hover:bg-gray-100/50"
                />
            </button>
            <button
                class="absolute top-1/2 right-2 transform -translate-y-1/2"
                id="nextButton"
            >
                <Aright
                    clases="w-24 h-24 bg-none text-gray-300 rounded-full hover:text-red-500 hover:bg-gray-100/50"
                />
            </button>
        </div>
        <script>
            import "../constants/carousel.js";
        </script>
    </Gallery>
</Layout>
